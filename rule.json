//范例3 ：1个分组；比如 （检查结果=正常 而且 检查人=张三） 或者 (检查人=李四)

//表单规则逻辑定义数组
"LRC": [
{
    "RN": "规则2",
    "C": //条件，支持and or 条件组
    {
        "GR": "OR", // 组之间 为or 逻辑
        "GC": [ //2个分组
            {
                "R": "AND", //
                "C": [
                {
                    "F": "FK001", //假设检查结果对应字段编号为FK001
                    "O": "=", //比较操作符=,>,>=,<,<=,<>,in,notin,BETWEEN
                    "VT": "1", //值类型，0 自定义
                    "V": "正常" //比较的值，值域列表自行定义即可
                },
                {
                    "F": "FK002",
                    "O": "=",
                    "VT": "1",
                    "V": "张三"
                }]
            },
            {
                "R": "AND", //只有一个条件也是用AND
                "C": [
                {
                    "F": "FK002",
                    "O": "=",
                    "VT": "1",
                    "V": "李四"
                }]
            }
        ]
    }
}]