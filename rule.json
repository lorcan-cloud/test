},
{
    "FN": "检查时间",
    "FK": "FK003",
    "VT": "2"
},
{
    "FN": "问题数量",
    "FK": "FK004",
    "VT": "3"
},
{
    "FN": "设备异常",
    "FK": "FK005",
    "VT": "4"
}]




//范例1 ：只有一个条件；比如检查结果=正常

//表单规则逻辑定义数组
"LRC": [
{
    "RN": "规则1",
    "C": //条件，支持and or 条件组
    {
        "GR": "", //不分组
        "GC": [ //不分组，组配置节点也会保留认一条分组
            {
                "R": "AND", //只有一个条件也是用AND
                "C": [
                {
                    "F": "FK001", //假设检查结果对应字段编号为FK001
                    "O": "=", //比较操作符=,>,>=,<,<=,<>,in,notin,BETWEEN
                    "VT": "1", //值类型，0 自定义
                    "V": "正常" //比较的值，值域列表自行定义即可
                }]
            }
        ]
    }
}]



