//表单规则逻辑定义数组
"LRC": [
{
    "RN": "规则名称",
    "C": //条件，支持and or 条件组
    {
        "GR": "AND", //一级分组逻辑，值：AND OR ，无多个分组时（不分组）为空值""，同时GC数组只有一行数据
        "GC": [
        {
            //分组内的条件配置，C为条件数组
            "R": "AND", //条件组内多个条件的逻辑:AND OR
            "C": [
            {
                "F": "FK001", //比较的字段。（自行模拟，用固定数组列表模拟，字段名称任意）
                "O": "=", //比较操作符=,>,>=,<,<=,<>,in,notin,BETWEEN
                "VT": "1", //值类型（机试题可忽略此配置），1 字符，2 日期时间，3  数字  4 bool
                "V": "正常" // 比较的值，值域列表自行定义即可
            },
            {
                "F": "FK003",
                "O": ">",
                "VT": "2",
                "V": "2022-01-01"
            }]
        }]
    }
}]



//表单字段定义JSON， 用于界面的字段选择； FN为字段名称，FK为字段编号，VT为类型 1 字符，2 日期时间，3  数字  4 bool

"fields": [
{
    "FN": "检查结果",
    "FK": "FK001",
    "VT": "1"
},
{
